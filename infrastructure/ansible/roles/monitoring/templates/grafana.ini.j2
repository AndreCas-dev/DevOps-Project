[server]
protocol = http
http_port = 3000
domain = {{ grafana_domain }}
root_url = {{ 'https' if ssl_enabled | default(false) else 'http' }}://{{ grafana_domain }}{{ grafana_external_url }}
serve_from_sub_path = true

[database]
type = sqlite3

[security]
admin_user = {{ grafana_admin_user | default(monitoring_grafana_admin_user) }}
admin_password = {{ grafana_admin_password | default(monitoring_grafana_admin_password) }}
secret_key = {{ grafana_secret_key | default('SW2YcwTIb9zpOOhoPsMm') }}

[users]
allow_sign_up = {{ grafana_allow_sign_up | default(false) | lower }}

[auth.anonymous]
enabled = false

[unified_alerting]
enabled = true

[log]
mode = console
level = {{ grafana_log_level | default('info') }}

[paths]
provisioning = /etc/grafana/provisioning
