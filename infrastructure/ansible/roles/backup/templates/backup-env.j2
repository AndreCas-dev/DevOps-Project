# Directories
BACKUP_DIR={{ backup_base_dir }}
COMPOSE_DIR={{ backup_compose_dir }}
VOLUMES_DIR={{ backup_volumes_dir }}

# Retention
RETENTION_DAYS={{ backup_retention_days }}

# Database
