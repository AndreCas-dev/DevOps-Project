# DevOps Project - Environment Variables
# Managed by Ansible + SOPS - Do not edit manually

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_HOST={{ database.postgres_host }}
POSTGRES_PORT={{ database.postgres_port }}
POSTGRES_USER={{ database.postgres_user }}
POSTGRES_PASSWORD={{ database.postgres_password }}
POSTGRES_DB={{ database.postgres_db }}

# =============================================================================
# Application Configuration
# =============================================================================
DEBUG={{ app.debug }}

# =============================================================================
# Nginx Configuration
# =============================================================================
NGINX_PORT={{ nginx.port }}

# =============================================================================
# Monitoring - Grafana
# =============================================================================
GF_ADMIN_USER={{ monitoring.grafana_admin_user}}
GF_ADMIN_PASSWORD={{ monitoring.grafana_admin_password }}

# =============================================================================
# PgAdmin
# =============================================================================
PGADMIN_EMAIL={{ pgadmin.email }}
PGADMIN_PASSWORD={{ pgadmin.password }}
