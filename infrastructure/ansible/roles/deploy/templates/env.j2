# DevOps Project - Environment Variables
# Managed by Ansible - Do not edit manually

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_HOST={{ postgres_host | default('db') }}
POSTGRES_PORT={{ postgres_port | default(5432) }}
POSTGRES_USER={{ postgres_user }}
POSTGRES_PASSWORD={{ postgres_password }}
POSTGRES_DB={{ postgres_db | default('Test') }}

# =============================================================================
# Application Configuration
# =============================================================================
DEBUG={{ app_debug | default('false') }}

# =============================================================================
# Nginx Configuration
# =============================================================================
NGINX_PORT={{ nginx_port | default(80) }}

# =============================================================================
# Monitoring - Grafana
# =============================================================================
GF_ADMIN_USER={{ grafana_admin_user | default('admin') }}
GF_ADMIN_PASSWORD={{ grafana_admin_password }}

# =============================================================================
# PgAdmin
# =============================================================================
PGADMIN_EMAIL={{ pgadmin_email | default('admin@admin.com') }}
PGADMIN_PASSWORD={{ pgadmin_password | default(postgres_password) }}
